
<div class="col-md-12"> 
  <div class="page-header"> 
    <h2>Listing Categories</h2>
  </div>
</div>


<div class="col-md-8">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= link_to category ,class: "btn btn-sm" do%>
            <i class="glyphicon glyphicon-eye-open"></i>
            <% end %>
          </td>
          <td><%= link_to edit_category_path(category) ,class: "btn btn-sm" do%>
            <i class="glyphicon glyphicon-pencil"></i>
            <% end %>
          </td>
          <td><%= link_to category, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-sm" do %>
          <i class="glyphicon glyphicon-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to new_category_path ,class: "btn btn-primary" do %><!-- syntax to add glyphicon inside the link-->
    <i class="glyphicon glyphicon-plus"></i> Add category
  <% end %>

</div>

<div class="col-md-4">  
    <!-- this can be used further for displaying it in the right of table -->
    <%= render 'form' %>
</div>

